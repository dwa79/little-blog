<div class='row'>
  <div class='col-xs-12'>

    <%= form_for([@article, @article.comments.build], :html => {class: "form-horizontal", role:"form"}) do |f| %>
      <div class="form-group">
          <div class="control-label col-lg-1">
              <%= f.label :commenter %>
          </div>
          <div class="col-sm-8">
              <%= f.text_field :commenter, class: "form-control form-control-orange", placeholder: "Your comment title" %>
          </div>
          

      </div>
      
      <div class="form-group">
          <div class="control-label col-lg-1">
             <%= f.label :body %>
          </div>
          <div class="col-sm-8">
              <%= f.text_area :body, class: "form-control form-control-orange", placeholder: "Comment" %>
          </div>
          
  
      </div>
      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class:'btn btn-primary btn-lg' %>
          </div>
      </div>

    <% end %>
    
  </div>
</div>
